{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
      "strict": false,
      "target": "ESNext",
      "rootDir": "../",
      "baseUrl": "../",
      "types": [
          "node",
          "svelte"
      ],
     "skipLibCheck": true,
     
    "ignoreDeprecations" : "5.0",

    "module": "ESNext",
    "moduleResolution": "Bundler"
  },

  "include": ["./src/**/*", "../src/types.ts"], 
  "exclude": ["node_modules", "__sapper__/*"]
}