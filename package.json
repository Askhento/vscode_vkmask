{
  "name": "vkmask",
  "displayName": "vkmask",
  "publisher": "askhento",
  "repository": {
    "url": "https://github.com/Askhento/vscode_vkmask"
  },
  "description": "UI for vkontakte AR development ",
  "version": "0.4.5",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onWebviewPanel:vkmask.sidepanel",
    "workspaceContains:mask.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "vkmask",
      "properties": {
        "vkmask.use-builtins": {
          "type": "boolean",
          "default": true,
          "description": "Show builtin resources in file pickers"
        },
        "vkmask.accumulate-logs": {
          "type": "boolean",
          "default": false,
          "description": "Does it require to keep debug logs"
        }
      }
    },
    "commands": [
      {
        "command": "vkmask.dumpLogs",
        "title": "Dump vkmask logs to logsDump.json file",
        "shortTitle": "Dump vkmask logs"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vkmask_primary_bar",
          "title": "VK mask",
          "icon": "./res/smile-svgrepo-com.svg"
        }
      ]
    },
    "views": {
      "vkmask_primary_bar": [
        {
          "type": "webview",
          "contextualTitle": "vkmask sidepanel",
          "id": "vkmask.sidepanel",
          "name": "Sidepanel"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run clear && npm run build && npm run build:webview",
    "build": "tsc -p ./",
    "clear": "rimraf ./out",
    "watch": "set NODE_ENV=dev && tsc -watch -p ./",
    "dev": "npm run clear && conc \"npm:watch\" \"npm:dev:webview\"",
    "pretest": "npm run build && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "install:all": "npm install && cd webview-ui && npm install",
    "dev:webview": "cd webview-ui && npm run dev",
    "build:webview": "cd webview-ui && npm run build",
    "publish-patch": "vsce publish patch ; vsce package --out ./vsix-packages"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "rimraf": "^5.0.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.33",
    "fast-xml-parser": "^4.2.2",
    "json-source-map": "github:ramonsnir/json-source-map#typescript-definitions",
    "zod": "^3.20.2",
    "zod-validation-error": "^0.3.0"
  }
}
